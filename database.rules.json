{
  "rules": {
    "auctionPresence": {
      "$auctionId": {
        "$userId": {
          ".read": true,
          ".write": "auth != null && $userId === auth.uid"
        }
      }
    },
    "auctionViewerCounts": {
      "$auctionId": {
        ".read": true,
        ".write": false
      }
    },
    ".read": false,
    ".write": false
  }
}
