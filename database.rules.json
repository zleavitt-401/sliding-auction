{
  "rules": {
    "presence": {
      "$auctionId": {
        "live": {
          "$userId": {
            ".read": true,
            ".write": "$userId === auth.uid",
            ".validate": "newData.hasChildren(['online', 'timestamp'])",
            "online": {
              ".validate": "newData.isBoolean()"
            },
            "timestamp": {
              ".validate": "newData.isNumber()"
            }
          }
        }
      }
    },
    "auctionViewerCounts": {
      "$auctionId": {
        ".read": true,
        ".write": false,
        ".validate": "newData.isNumber()"
      }
    },
    ".read": false,
    ".write": false
  }
}
